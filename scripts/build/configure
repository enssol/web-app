#!/bin/sh

#######################################
# Configure script for generating config.h and config-test.h
#
# Usage: ./configure
#######################################

# Strict mode
set -e
set -u

# Load common configuration
. ../config/common-config.sh

# Function to call mkconfig.sh
call_mkconfig() {
    ./scripts/config/mkconfig.sh
}

# Main function to configure
configure_main() {
    call_mkconfig
    printf "Configuration completed successfully\n"
}

# Execute main function
configure_main

# vim: set ft=sh ts=4 sw=4 et:
