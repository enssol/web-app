Checks: >
  -*,                           # Disable all checks by default
  c23-*,                        # Enable all checks for C23
  posix-*                       # Enable all checks for POSIX compliance
  cert-env33-c,                 # Environment-specific safety (compliant with CERT guidelines)
  bugprone-*,                   # Detect potential bugs in logic
  readability-*,                # Improve code readability
  portability-*,                # Address cross-platform issues
  misc-*                        # Enable general miscellaneous best practices

WarningsAsErrors: '*'          # Treat all warnings as errors
HeaderFilterRegex: '.*'        # Apply checks to all headers in the project
FormatStyle: google            # Use Google style for code formatting
UseColor: true                 # Enable color output in reports
User: true                     # Apply custom settings
