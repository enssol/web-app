# EditorConfig: https://editorconfig.org/

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = ascii
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

# C source and header files
[*.{c,h}]
indent_style = space
indent_size = 4
max_line_length = 80
insert_final_newline = true
trim_trailing_whitespace = true
curly_bracket_next_line = true
spaces_around_operators = true
spaces_around_brackets = false
indent_brace_style = Allman
quote_type = double

# Makefiles require tabs
[Makefile]
indent_style = tab
tab_width = 4

[Makefile.*]
indent_style = tab
tab_width = 4

# JavaScript files - ES3 strict mode
[*.{js}]
indent_style = space
indent_size = 2
quote_type = single
curly_bracket_next_line = false
spaces_around_operators = true
spaces_around_brackets = inside
indent_brace_style = stroustrup
max_line_length = 80

# HTML files - HTML 4.01 Strict
[*.{html,htm}]
indent_style = space
indent_size = 2
quote_type = double
max_line_length = 80
insert_final_newline = true
trim_trailing_whitespace = true

# CSS files - CSS 2.1
[*.css]
indent_style = space
indent_size = 2
quote_type = double
max_line_length = 80
block_comment_start = /*
block_comment = *
block_comment_end = */

# Configuration files
[*.{json,yml,yaml,xml}]
indent_style = space
indent_size = 2

# Documentation files
[*.{md,txt}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
max_line_length = 80

# Configuration files
[*.{conf,rec,desc}]
indent_size = 2
trim_trailing_whitespace = true

# Security-sensitive files
[{cert.pem,privkey.pem,passwd}]
charset = utf-8
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = false

# Environment files
[.env*]
insert_final_newline = true
trim_trailing_whitespace = true

# Documentation
[*.md]
trim_trailing_whitespace = false
max_line_length = off
