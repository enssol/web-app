# EditorConfig for EnvEng WebApp
root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

# C source and header files
[*.{c,h}]
indent_style = space
indent_size = 4
max_line_length = 80
insert_final_newline = true
trim_trailing_whitespace = true
curly_bracket_next_line = true
spaces_around_operators = true
spaces_around_brackets = false
indent_brace_style = Allman
quote_type = double

# Makefiles require tabs
[Makefile]
indent_style = tab
tab_width = 4

# Web files
[*.{html,css,js}]
indent_size = 2
max_line_length = 120

# Configuration files
[*.{conf,rec,desc}]
indent_size = 2
trim_trailing_whitespace = true

# Security-sensitive files
[{cert.pem,privkey.pem,passwd}]
charset = utf-8
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = false

# Environment files
[.env*]
insert_final_newline = true
trim_trailing_whitespace = true

# Documentation
[*.md]
trim_trailing_whitespace = false
max_line_length = off
